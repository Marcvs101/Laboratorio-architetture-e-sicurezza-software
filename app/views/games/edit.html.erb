<% if @game.errors.full_messages.length > 0 %>
    <strong> "Errors:" </strong>
    <% @game.errors.full_messages.each do |error| %>
        <br>
        <%= error%>
    <% end %>
    <hr>
<% end %>

<h2>Edit Game</h2>


<%= form_for @game, html: { multipart: true } do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %> <br>
        
        <%= f.label :pegi %><br>
        <%= f.select :pegi, ['3','7','12','16','18'] %> <br>
        
        <%= f.label :genre %><br>
        <%= f.text_field :genre %> <br>
        
        <%= f.label :maker %><br>
        <%= f.text_field :maker %> <br>
        
        <%= f.label :year %><br>
        <%= f.date_select :year, :start_year => 1960 %> <br>
        
        <%= f.label :description %><br>
        <%= f.text_area :description, size: "100x30" %>
        <li>
        <%= f.label :image, "Photo" %>
        <%= f.file_field :image %>
        <li>
    </p>
    <p>
        <%= f.submit "Save Changes"%>
    </p>
<% end %>
