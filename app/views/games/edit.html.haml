%h2 Edit Game

= form_tag game_path(@game), :method => :put do

    = label :game, :name, 'Name'
    %br
    = text_field :game, :name
    %br

    = label :game, :pegi, 'Pegi'
    %br
    = select :game, :pegi, ['3','7','12','16','18']
    %br

    = label :game, :genre, 'Genre'
    %br
    = text_field :game, :genre
    %br

    = label :game, :maker, 'Maker'
    %br
    = text_field :game, :maker
    %br

    = label :game, :description, 'Description'
    %br
    = text_area :game, :description, size: "100x30"
    %br

    = submit_tag 'Save Changes'
