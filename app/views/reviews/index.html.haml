%h2 Details about #{@game.name}
%ul
    %li
        Name:
        = @game.name
    %li
        Genre:
        = @game.genre
    %li
        Maker:
        = @game.maker
    %li
        Pegi:
        = @game.pegi

%h2 Avarage Rating: #{@avarage}

%h3 Description:
%p= @game.description

- if flash[:notice]
    #notice.message= flash[:notice]

- elsif flash[:warning]
    #notice.warning= flash[:warning]
    
%table
    %thead
        %tr
            %th User
            %th Rating
    %tbody
        - @reviews.each do |review|
            %tr
                %td= review.user.name
                %td= review.rating
                %td= link_to 'Read more', game_review_path(@game,review)
= link_to 'Add review', new_game_review_path(@game)
%br
    

= link_to 'Edit', edit_game_path(@game)
= link_to 'Delete', game_path(@game), :method => :delete
= link_to 'Back to list', games_path
