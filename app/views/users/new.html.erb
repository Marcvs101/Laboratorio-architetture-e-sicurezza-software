<h1>NEW USER</h1>

<%= form_for :user, url: users_path do |f| %>
    <p>
        <%= f.label :name %><br>
        <%= f.text_area :name %>
    </p>
    <p>
        <%= f.label :lastname %><br>
        <%= f.text_area :lastname %>
    </p>
    <p>
        <%= f.label :email %><br>
        <%= f.text_area :email %>
    </p>
    <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </p>

    <p>
        <%= f.submit "Create User", :role = "Active"%>
    </p>
<% end %>
